<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rawtooth.industry.IndustryRegisterActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:title="Industry Register"
        android:background="#03A9F4"
        app:titleTextColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Please enter your details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textColor="#03A9F4"/>
    <EditText
        android:id="@+id/indusrty_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter industry name"
        android:layout_margin="20dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/black" />
    <EditText
        android:id="@+id/industry_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter industry email"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_margin="20dp"
        android:textColorHint="@color/black" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Select Industry Type"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="#03A9F4"/>
    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawSelectorOnTop="true"
        android:entries="@array/spinnerItems"
        />

    </LinearLayout>
    <EditText
        android:id="@+id/industry_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_margin="20dp"
        android:textColorHint="@color/black" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Select Industry sector"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="#03A9F4"/>
        <Spinner
            android:id="@+id/spinner_sector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawSelectorOnTop="true"
            android:entries="@array/sector"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/industry_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter industry address"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_margin="20dp"
        android:textColorHint="@color/black" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/industry_submit"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_gravity="center"
        app:cornerRadius="20dp"/>

</LinearLayout>